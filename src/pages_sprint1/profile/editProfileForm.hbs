{{!< main}}

        <form class="container">
          <h3 class="text-center"><i class="fa fa-long-arrow-left" aria-hidden="true" onclick="history.back()"></i> Profile</h3>
            <div class="photo-editing-field">
                {{> avatar/avatar name=""}}
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </div>
            {{> formItem/input name="login" placeholder="login" required="true" type="text" }}
            {{> formItem/input name="name" placeholder="Name" required="true" type="text" }}
            {{> formItem/input name="surname" placeholder="Surname" required="true" type="text" }}
            {{> formItem/input name="phone" placeholder="Phone" required="true" type="text" }}
            {{> formItem/input name="email" placeholder="Email" required="true" type="email" }}
          <div class="form-btns">
              {{> button/button title="Edit" type="btn btn-primary btn-block"}}
              {{> button/button title="Edit password" link="./editPasswordForm.hbs" type="btn btn-block"}}
          </div>
        </form>
